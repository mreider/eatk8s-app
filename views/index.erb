<!DOCTYPE html>
<html>
<head>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/picnic">
<script
  src="https://code.jquery.com/jquery-3.5.1.min.js"
  integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
  crossorigin="anonymous"></script>
  <script>
 $(document).ready(function() {
    $("#settings").hide();
    get_groceries();
    $('.buttons').on('click', 'button', function(){
      deliver($(this).attr('id'),$('#complexity').attr('value'),$('#size').attr('value'))
    });
    $("#shop").click(function(){
      shop();
    });
    $("#nav").click(function(){
      $("#settings").toggle();
    });
  });
  function deliver(shopping_list,complexity,size) {
    $.ajax({
        url: '/deliver',
        data: {
            shopping_list: shopping_list,
            complexity: complexity,
            size: size
        },
        type: 'POST',
        dataType: 'html'
    }).done(function() {
      get_groceries();
    });
  }
  function get_groceries() {
    $.getJSON('/whois', function(data) {
        var output = '';
        $.each(data, function(key, value) {
            output += '<tr><td>' + value + '<td>' + key + '</td><td><button id="' + key + '">deliver</button></td></tr>';
        });
        $('#shopping_list').html(output); // <ul id="example"></ul>
    });
  }
  function shop() {
    $.getJSON('/shop', function(data) {
    }).done(function() {
    get_groceries();
    $( "#bmenu" ).trigger( "click" );
    });
  }
  </script>
  <title>eatK8s</title>
</head>
<body>
<div class="flex one" style="padding:30px">
<article class="card">
  <header>
    <button id="nav">settings</button>
    <button id="shop">shop!</button>
  </header>
  <div id="settings" style="padding:10px">
    <label>
    <input type="checkbox" id="robot">
    <span class="checkable">robot mode</span><br>
    <label>complexity<input type="text" id="complexity" placeholder="complexity" value="1"></label>
    <label>size<input type="text" id="size" placeholder="size" value="1"></label>
    </label>
  </div>
</article>
</div>
<div class="flex one" style="padding:30px">
<table class="primary">
  <thead>
    <tr>
      <th>Shopper</th>
      <th>Groceries</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody class="buttons" id="shopping_list">
  </tbody>
</table>
</div>
</body>
</html>